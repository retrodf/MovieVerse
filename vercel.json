{
    "version": 2,
    "builds": [
      {
        "src": "fe/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "fe/dist"
        }
      },
      {
        "src": "be/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/be/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/fe/$1"
      }
    ],
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  }
  