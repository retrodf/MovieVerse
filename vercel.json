{
    "version": 2,
    "builds": [
      {
        "src": "fe/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "be/server.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 10
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/be/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/fe/$1"
      }
    ],
    "buildCommand": "npm install && npm run build"
  }
  